---
networks:
  web_net:
    name: web_net
    external: true
  app_net:
    name: app_net
    external: true

volumes:
  runner_data:
    name: runner_data

services:
  runner:
    image: gitlab/gitlab-runner:${image_tag}
    restart: ${restart_policy}
    container_name: ${container_name}
    hostname: runner
    volumes:
      - "/var/run/docker.sock:/var/run/docker.sock"
      - "runner_data:/etc/gitlab-runner"
    networks:
      - app_net
      - web_net

      